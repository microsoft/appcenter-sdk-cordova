    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run android on emulator",
            "type": "cordova",
            "request": "launch",
            "platform": "android",
            "target": "emulator",
            "sourceMaps": true,
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/demoapp\\www\\js\\apis.js"
        }
    ]
}